<div class = "container">
  <h2>EDIT PLOFILE</h2>
  <div class="row">
    <div class="col-md-6 mx-auto">

      <%= render "layouts/error", model: @user %>
      <%= form_with model: @user,url: user_path(current_user.id), local: true do |f| %>

        <div class="mt-5">
          <%= attachment_image_tag @user, :icon, :fill, 60, 60, fallback: "no_image.png",size:"60x60",style:"border-radius: 50%",class:"mb-2"%>
          <%= f.label :icon ,"アイコン"%><br />
          <%= f.file_field :icon %>
        </div>

        <div class="mt-4">
          <%= f.label :name ,"名前" %><br />
          <%= f.text_field :name, autofocus: true ,class:"form-control"%>
        </div>

        <div class="mt-4">
          <%= f.label :introduction, '紹介文' %><br />
          <%= f.text_area :introduction ,class:"form-control", rows: "5" %>
        </div>

        <div class="text-center mt-5">
          <%= f.submit 'update' ,class:"submit" %>
        </div>
        <div class="text-center mt-5">
          <%= link_to "back", user_path(@user) ,class:"back"%>
        </div>

      <%end%>

    </div>
  </div>
</div>